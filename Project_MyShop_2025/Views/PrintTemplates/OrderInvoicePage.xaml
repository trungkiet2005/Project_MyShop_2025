<Page
    x:Class="Project_MyShop_2025.Views.PrintTemplates.OrderInvoicePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Project_MyShop_2025.Core.Models"
    mc:Ignorable="d"
    Background="White">

    <Grid Padding="40" MaxWidth="800" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Customer Info -->
            <RowDefinition Height="*"/>    <!-- Items -->
            <RowDefinition Height="Auto"/> <!-- Totals -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="INVOICE" FontSize="32" FontWeight="Bold" Foreground="#0F172A" HorizontalAlignment="Left"/>
            <TextBlock Text="MyShop 2025" FontSize="16" Foreground="#64748B" Margin="0,4,0,0"/>
            <TextBlock x:Name="OrderIdText" Text="Order #12345" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,-50,0,0"/>
            <TextBlock x:Name="OrderDateText" Text="January 15, 2025" FontSize="14" Foreground="#64748B" HorizontalAlignment="Right" Margin="0,-25,0,0"/>
        </StackPanel>

        <!-- Customer Info -->
        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="BILL TO" FontSize="12" FontWeight="Bold" Foreground="#94A3B8" Margin="0,0,0,8"/>
                <TextBlock x:Name="CustomerNameText" Text="Customer Name" FontSize="16" FontWeight="SemiBold" Foreground="#0F172A"/>
                <TextBlock x:Name="CustomerAddressText" Text="123 Street Name, City, Country" FontSize="14" Foreground="#475569" TextWrapping="Wrap" Margin="0,4,0,0"/>
                <TextBlock x:Name="CustomerPhoneText" Text="+1 234 567 890" FontSize="14" Foreground="#475569" Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Items Table -->
        <StackPanel Grid.Row="2" VerticalAlignment="Top">
            <!-- Table Header -->
            <Grid Background="#F1F5F9" Padding="12,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/> <!-- Item -->
                    <ColumnDefinition Width="1*"/> <!-- Qty -->
                    <ColumnDefinition Width="1.5*"/> <!-- Price -->
                    <ColumnDefinition Width="1.5*"/> <!-- Total -->
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="ITEM" FontWeight="SemiBold" FontSize="12" Foreground="#475569"/>
                <TextBlock Grid.Column="1" Text="QTY" FontWeight="SemiBold" FontSize="12" Foreground="#475569" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="PRICE" FontWeight="SemiBold" FontSize="12" Foreground="#475569" HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="3" Text="TOTAL" FontWeight="SemiBold" FontSize="12" Foreground="#475569" HorizontalAlignment="Right"/>
            </Grid>

            <!-- Items List -->
            <ItemsControl x:Name="ItemsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models:OrderItem">
                        <Grid Padding="12,12" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/> 
                                <ColumnDefinition Width="1*"/> 
                                <ColumnDefinition Width="1.5*"/> 
                                <ColumnDefinition Width="1.5*"/> 
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{x:Bind Product.Name}" FontSize="14" Foreground="#0F172A" TextWrapping="Wrap"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind Quantity}" FontSize="14" Foreground="#475569" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{x:Bind PriceFormatted}" FontSize="14" Foreground="#475569" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="3" Text="{x:Bind TotalPriceFormatted}" FontSize="14" FontWeight="SemiBold" Foreground="#0F172A" HorizontalAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Totals -->
        <StackPanel Grid.Row="3" Margin="0,30,0,0" HorizontalAlignment="Right" Width="250">
            <Grid Margin="0,0,0,8">
                <TextBlock Text="Subtotal" Foreground="#64748B"/>
                <TextBlock x:Name="SubTotalText" Text="₫0" HorizontalAlignment="Right" Foreground="#0F172A"/>
            </Grid>
            <Grid Margin="0,0,0,8">
                <TextBlock Text="Discount" Foreground="#64748B"/>
                <TextBlock x:Name="DiscountText" Text="-₫0" HorizontalAlignment="Right" Foreground="#10B981"/>
            </Grid>
            <Rectangle Height="1" Fill="#E2E8F0" Margin="0,8"/>
            <Grid>
                <TextBlock Text="Total" FontSize="18" FontWeight="Bold" Foreground="#0F172A"/>
                <TextBlock x:Name="TotalText" Text="₫0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" Foreground="#3B82F6"/>
            </Grid>
        </StackPanel>

        <!-- Footer -->
        <TextBlock Grid.Row="4" Text="Thank you for your business!" HorizontalAlignment="Center" Margin="0,50,0,0" Foreground="#94A3B8" FontSize="14"/>
    </Grid>
</Page>
