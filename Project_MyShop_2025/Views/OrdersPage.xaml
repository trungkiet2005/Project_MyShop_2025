<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Project_MyShop_2025.Views.OrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_MyShop_2025.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8FAFC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Page Header -->
        <Border Grid.Row="0" Background="White" Padding="24,20" 
                BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Title & Count -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                    <TextBlock Text="Order Management" FontSize="24" FontWeight="Bold" Foreground="#0F172A"/>
                    <Border Background="#EFF6FF" CornerRadius="16" Padding="12,6" VerticalAlignment="Center">
                        <TextBlock x:Name="ResultsCountText" Text="0 orders" FontSize="13" 
                                   Foreground="#3B82F6" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <!-- Right: Create Order Button -->
                <Button x:Name="AddOrderButton" Grid.Column="2" Click="AddOrderButton_Click" 
                        Background="#8B5CF6" Foreground="White" CornerRadius="8" Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="16"/>
                        <TextBlock Text="Create Order" FontSize="13" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Row 1: Filters Toolbar -->
        <Border Grid.Row="1" Background="#FFFFFF" Padding="24,16" 
                BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0: Search, Date Range, Status -->
                <!-- Row 0: Search, Date Range, Status -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Border Grid.Column="0" Background="#F8FAFC" CornerRadius="8" 
                            BorderBrush="#E2E8F0" BorderThickness="1" Padding="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="44"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0" Glyph="&#xE721;" FontSize="16" 
                                      Foreground="#94A3B8" HorizontalAlignment="Center"/>
                            <TextBox x:Name="SearchBox" Grid.Column="1" 
                                     PlaceholderText="Search orders, customers..." 
                                     TextChanged="SearchBox_TextChanged" 
                                     BorderThickness="0" Background="Transparent"
                                     VerticalAlignment="Center" Padding="0,10"/>
                        </Grid>
                    </Border>

                    <!-- Date Range Button with Flyout -->
                    <Button Grid.Column="2" Background="#F8FAFC" BorderBrush="#E2E8F0" 
                            BorderThickness="1" CornerRadius="8" Padding="14,8" Height="40">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE787;" FontSize="14" Foreground="#64748B"/>
                            <TextBlock Text="Date Range" FontSize="13" Foreground="#475569"/>
                            <FontIcon Glyph="&#xE70D;" FontSize="10" Foreground="#94A3B8"/>
                        </StackPanel>
                        <Button.Flyout>
                            <Flyout Placement="Bottom">
                                <StackPanel Spacing="16" Width="300" Padding="4">
                                    <TextBlock Text="Filter by Date" FontWeight="SemiBold" FontSize="14" Foreground="#0F172A"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="16"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="From" FontSize="12" Foreground="#64748B"/>
                                        <TextBlock Grid.Row="0" Grid.Column="2" Text="To" FontSize="12" Foreground="#64748B"/>
                                        
                                        <CalendarDatePicker x:Name="FromDatePicker" Grid.Row="2" Grid.Column="0" 
                                                           DateChanged="DateFilter_Changed" HorizontalAlignment="Stretch"/>
                                        <CalendarDatePicker x:Name="ToDatePicker" Grid.Row="2" Grid.Column="2" 
                                                           DateChanged="DateFilter_Changed" HorizontalAlignment="Stretch"/>
                                    </Grid>
                                    <Button Content="Clear Dates" Click="ClearDateFilter_Click" 
                                            HorizontalAlignment="Right" Background="Transparent" 
                                            BorderThickness="0" Foreground="#EF4444"/>
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>

                    <!-- Advanced Filters Button -->
                    <Button Grid.Column="4" Background="#F8FAFC" BorderBrush="#E2E8F0" 
                            BorderThickness="1" CornerRadius="8" Padding="14,8" Height="40">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE16E;" FontSize="14" Foreground="#64748B"/>
                            <TextBlock Text="More Filters" FontSize="13" Foreground="#475569"/>
                            <FontIcon Glyph="&#xE70D;" FontSize="10" Foreground="#94A3B8"/>
                        </StackPanel>
                        <Button.Flyout>
                            <Flyout Placement="Bottom">
                                <StackPanel Spacing="16" Width="280" Padding="4">
                                    <TextBlock Text="Advanced Filters" FontWeight="SemiBold" FontSize="14" Foreground="#0F172A"/>
                                    
                                    <!-- Amount Range -->
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Order Total Value" FontSize="12" Foreground="#64748B"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="MinAmountBox" Grid.Column="0" 
                                                     PlaceholderText="Min ₫" TextChanged="AmountFilter_Changed"/>
                                            <TextBlock Grid.Column="1" Text="—" VerticalAlignment="Center" 
                                                       HorizontalAlignment="Center" Foreground="#94A3B8"/>
                                            <TextBox x:Name="MaxAmountBox" Grid.Column="2" 
                                                     PlaceholderText="Max ₫" TextChanged="AmountFilter_Changed"/>
                                        </Grid>
                                    </StackPanel>
                                    
                                    <!-- Quick Filters -->
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Quick Filters" FontSize="12" Foreground="#64748B"/>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Button Content="High Value (>1M)" Click="HighValueFilter_Click"
                                                    Background="#EFF6FF" Foreground="#2563EB" 
                                                    CornerRadius="6" Padding="10,6" FontSize="12"/>
                                            <Button Content="Cancelled" Click="CancelledFilter_Click"
                                                    Background="#FEF2F2" Foreground="#DC2626"
                                                    CornerRadius="6" Padding="10,6" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Apply / Clear -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Content="Clear All" Grid.Column="0" Click="ClearFilters_Click"
                                                HorizontalAlignment="Stretch" Background="#F1F5F9" 
                                                Foreground="#475569" CornerRadius="6"/>
                                        <Button Content="Apply" Grid.Column="2" Click="ApplyAdvancedFilters_Click"
                                                HorizontalAlignment="Stretch" Background="#3B82F6" 
                                                Foreground="White" CornerRadius="6"/>
                                    </Grid>
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>

                    <!-- Sort Dropdown -->
                    <ComboBox x:Name="SortComboBox" Grid.Column="6" HorizontalAlignment="Stretch" 
                              SelectionChanged="SortComboBox_SelectionChanged">
                        <ComboBoxItem Content="Newest First" Tag="DateDesc" IsSelected="True"/>
                        <ComboBoxItem Content="Oldest First" Tag="DateAsc"/>
                        <ComboBoxItem Content="Amount: High → Low" Tag="AmountDesc"/>
                        <ComboBoxItem Content="Amount: Low → High" Tag="AmountAsc"/>
                    </ComboBox>

                    <!-- Export Button -->
                    <Button Grid.Column="8" Background="White" BorderBrush="#E2E8F0" 
                            BorderThickness="1" CornerRadius="8" Padding="14,8" Height="40"
                            ToolTipService.ToolTip="Export orders">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xEDE1;" FontSize="14" Foreground="#64748B"/>
                            <TextBlock Text="Export" FontSize="13" Foreground="#475569"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Row 2: Status Pills -->
                <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="StatusPillsPanel" Orientation="Horizontal" Spacing="10"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Row 2: Orders List -->
        <ScrollViewer Grid.Row="2" Padding="24,16" VerticalScrollBarVisibility="Auto" 
                      Background="#F8FAFC">
            <ListView x:Name="OrdersListView" SelectionMode="None">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,0,12"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="12" BorderBrush="#E2E8F0" 
                                BorderThickness="1" Padding="0" 
                                PointerEntered="OrderCard_PointerEntered"
                                PointerExited="OrderCard_PointerExited">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Order ID Badge -->
                                <Border Grid.Column="0" Background="#F1F5F9" Padding="16,20" 
                                        CornerRadius="12,0,0,12" MinWidth="80">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding OrderId}" FontSize="16" FontWeight="Bold" 
                                                   Foreground="#0F172A" HorizontalAlignment="Center"/>
                                        <TextBlock Text="ORDER" FontSize="9" Foreground="#94A3B8" 
                                                   HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Customer Info & Items -->
                                <StackPanel Grid.Column="1" Padding="20,16" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CustomerName}" FontSize="15" FontWeight="SemiBold" 
                                               Foreground="#0F172A"/>
                                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,6,0,0">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="&#xE787;" FontSize="12" Foreground="#94A3B8"/>
                                            <TextBlock Text="{Binding CreatedAt}" FontSize="12" Foreground="#64748B"/>
                                        </StackPanel>
                                        <TextBlock Text="•" Foreground="#CBD5E1"/>
                                        <TextBlock Text="{Binding ItemsCount}" FontSize="12" Foreground="#64748B"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding ItemsSummary}" FontSize="12" Foreground="#94A3B8" 
                                               Margin="0,4,0,0" TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                                </StackPanel>

                                <!-- Status Badge -->
                                <Border Grid.Column="2" Background="{Binding StatusBackground}" 
                                        CornerRadius="6" Padding="12,6" Margin="0,0,16,0" 
                                        VerticalAlignment="Center" Height="32">
                                    <TextBlock Text="{Binding StatusText}" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="{Binding StatusForeground}" VerticalAlignment="Center"/>
                                </Border>

                                <!-- Total Price -->
                                <TextBlock Grid.Column="3" Text="{Binding TotalPriceFormatted}" 
                                           FontSize="18" FontWeight="Bold" Foreground="#0F172A" 
                                           VerticalAlignment="Center" Margin="0,0,20,0"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="4" 
                                            VerticalAlignment="Center" Margin="0,0,12,0">
                                    <Button Background="Transparent" BorderThickness="0" 
                                            Padding="10" CornerRadius="6"
                                            Click="ViewOrder_Click" Tag="{Binding OrderId}"
                                            ToolTipService.ToolTip="View details">
                                        <FontIcon Glyph="&#xE8F4;" FontSize="16" Foreground="#3B82F6"/>
                                    </Button>
                                    <Button Background="Transparent" BorderThickness="0" 
                                            Padding="10" CornerRadius="6"
                                            Click="UpdateStatus_Click" Tag="{Binding OrderId}"
                                            ToolTipService.ToolTip="Update status">
                                        <FontIcon Glyph="&#xE8A5;" FontSize="16" Foreground="#10B981"/>
                                    </Button>
                                    <Button Background="Transparent" BorderThickness="0" 
                                            Padding="10" CornerRadius="6"
                                            Click="PrintOrder_Click" Tag="{Binding OrderId}"
                                            ToolTipService.ToolTip="Print invoice">
                                        <FontIcon Glyph="&#xE749;" FontSize="16" Foreground="#64748B"/>
                                    </Button>
                                    <Button Background="Transparent" BorderThickness="0" 
                                            Padding="10" CornerRadius="6"
                                            Click="EditOrder_Click" Tag="{Binding OrderId}"
                                            ToolTipService.ToolTip="Edit order">
                                        <FontIcon Glyph="&#xE70F;" FontSize="16" Foreground="#F59E0B"/>
                                    </Button>
                                    <Button Background="Transparent" BorderThickness="0" 
                                            Padding="10" CornerRadius="6"
                                            Click="DeleteOrder_Click" Tag="{Binding OrderId}"
                                            ToolTipService.ToolTip="Delete order">
                                        <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="#EF4444"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <!-- Row 3: Pagination -->
        <Border Grid.Row="3" Background="White" Padding="24,14" 
                BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="PrevPageButton" Grid.Column="0" Click="PrevPage_Click" 
                        Background="White" BorderBrush="#E2E8F0" BorderThickness="1" 
                        CornerRadius="8" Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE76B;" FontSize="12" Foreground="#64748B"/>
                        <TextBlock Text="Previous" FontSize="13" Foreground="#475569"/>
                    </StackPanel>
                </Button>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" 
                            Spacing="16" VerticalAlignment="Center">
                    <TextBlock x:Name="PageInfoText" Text="Page 1 of 1" FontSize="13" 
                               Foreground="#64748B" VerticalAlignment="Center" FontWeight="Medium"/>
                    <Border Background="#E2E8F0" Width="1" Height="20"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Show:" FontSize="13" Foreground="#64748B" VerticalAlignment="Center"/>
                        <ComboBox x:Name="PageSizeComboBox" Width="100" 
                                  SelectionChanged="PageSize_SelectionChanged">
                            <ComboBoxItem Content="10 orders" Tag="10"/>
                            <ComboBoxItem Content="20 orders" Tag="20" IsSelected="True"/>
                            <ComboBoxItem Content="50 orders" Tag="50"/>
                            <ComboBoxItem Content="All" Tag="-1"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <Button x:Name="NextPageButton" Grid.Column="2" Click="NextPage_Click" 
                        Background="White" BorderBrush="#E2E8F0" BorderThickness="1" 
                        CornerRadius="8" Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Next" FontSize="13" Foreground="#475569"/>
                        <FontIcon Glyph="&#xE76C;" FontSize="12" Foreground="#64748B"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
