<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Project_MyShop_2025.Views.OrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_MyShop_2025.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8F9FA">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Order Management" FontSize="32" FontWeight="Bold" Foreground="#1A1A1A"/>
                <TextBlock Text="Manage your orders and transactions" FontSize="14" Foreground="#666666" Margin="0,4,0,0"/>
            </StackPanel>

            <Button x:Name="AddOrderButton" Grid.Column="1" Click="AddOrderButton_Click" Background="#9C27B0" Foreground="White" CornerRadius="8" Padding="16,10" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;" FontSize="16"/>
                    <TextBlock Text="Create Order"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Date Range Filter -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Date Range:" FontSize="14" FontWeight="SemiBold" Foreground="#1A1A1A" VerticalAlignment="Center" Margin="0,0,12,0"/>
                
                <StackPanel Grid.Column="1" Spacing="4">
                    <TextBlock Text="From Date" FontSize="11" Foreground="#666666"/>
                    <CalendarDatePicker x:Name="FromDatePicker" DateChanged="DateFilter_Changed"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Spacing="4">
                    <TextBlock Text="To Date" FontSize="11" Foreground="#666666"/>
                    <CalendarDatePicker x:Name="ToDatePicker" DateChanged="DateFilter_Changed"/>
                </StackPanel>

                <Button Grid.Column="5" Click="ClearDateFilter_Click" Background="Transparent" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="12,8" VerticalAlignment="Bottom" Margin="12,0,0,0">
                    <TextBlock Text="Clear" FontSize="12"/>
                </Button>
            </Grid>
        </Border>

        <!-- Status Filter -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Status:" FontSize="14" FontWeight="SemiBold" Foreground="#1A1A1A" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <ListView x:Name="StatusFilterList" Grid.Column="1" SelectionMode="Single" SelectionChanged="StatusFilter_SelectionChanged">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#E3F2FD" CornerRadius="20" Padding="16,8" BorderBrush="#2196F3" BorderThickness="1">
                                <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="Medium" Foreground="#2196F3"/>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <!-- Orders List -->
        <Border Grid.Row="3" Background="White" CornerRadius="12" Padding="24" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Results Count -->
                <TextBlock x:Name="ResultsCountText" Grid.Row="0" Text="Loading orders..." FontSize="13" Foreground="#666666" Margin="0,0,0,16"/>

                <!-- Orders ListView -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="OrdersListView" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,12" Padding="20">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Order Header -->
                                        <Grid Grid.Row="0" Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="6" Padding="10,6" Margin="0,0,16,0">
                                                <TextBlock Text="{Binding OrderId}" FontWeight="SemiBold" Foreground="#1A1A1A" FontSize="14"/>
                                            </Border>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding CustomerName}" FontSize="16" FontWeight="SemiBold" Foreground="#1A1A1A"/>
                                                <TextBlock Text="{Binding CreatedAt}" FontSize="12" Foreground="#666666" Margin="0,4,0,0"/>
                                            </StackPanel>

                                            <Border Grid.Column="2" Background="{Binding StatusColor}" CornerRadius="12" Padding="12,6" Margin="0,0,12,0">
                                                <TextBlock Text="{Binding StatusText}" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                                            </Border>

                                            <TextBlock Grid.Column="3" Text="{Binding TotalPriceFormatted}" FontSize="18" FontWeight="Bold" Foreground="#2196F3"/>
                                        </Grid>

                                        <!-- Order Items Summary -->
                                        <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                            <TextBlock Text="{Binding ItemsSummary}" FontSize="13" Foreground="#666666" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Button Grid.Column="0" Background="Transparent" BorderBrush="Transparent" 
                                                   Click="ViewOrder_Click" Tag="{Binding OrderId}" HorizontalAlignment="Stretch" Margin="0,0,4,0">
                                                <StackPanel Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center">
                                                    <FontIcon Glyph="&#xE8F4;" FontSize="14" Foreground="#2196F3"/>
                                                    <TextBlock Text="View" FontSize="12" Foreground="#2196F3"/>
                                                </StackPanel>
                                            </Button>
                                            
                                            <Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent" 
                                                   Click="EditOrder_Click" Tag="{Binding OrderId}" HorizontalAlignment="Stretch" Margin="4,0">
                                                <StackPanel Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center">
                                                    <FontIcon Glyph="&#xE70F;" FontSize="14" Foreground="#FF9800"/>
                                                    <TextBlock Text="Edit" FontSize="12" Foreground="#FF9800"/>
                                                </StackPanel>
                                            </Button>

                                            <Button Grid.Column="2" Background="Transparent" BorderBrush="Transparent" 
                                                   Click="UpdateStatus_Click" Tag="{Binding OrderId}" HorizontalAlignment="Stretch" Margin="4,0">
                                                <StackPanel Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center">
                                                    <FontIcon Glyph="&#xE8A5;" FontSize="14" Foreground="#4CAF50"/>
                                                    <TextBlock Text="Status" FontSize="12" Foreground="#4CAF50"/>
                                                </StackPanel>
                                            </Button>
                                            
                                            <Button Grid.Column="3" Background="Transparent" BorderBrush="Transparent" 
                                                   Click="DeleteOrder_Click" Tag="{Binding OrderId}" HorizontalAlignment="Stretch" Margin="4,0,0,0">
                                                <StackPanel Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center">
                                                    <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="#F44336"/>
                                                    <TextBlock Text="Delete" FontSize="12" Foreground="#F44336"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Pagination -->
        <Grid Grid.Row="4" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="PrevPageButton" Grid.Column="0" Click="PrevPage_Click" Background="White" 
                    BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="16,10">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE76B;" FontSize="14"/>
                    <TextBlock Text="Previous"/>
                </StackPanel>
            </Button>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8" VerticalAlignment="Center">
                <TextBlock x:Name="PageInfoText" Text="Page 1 of 1" FontSize="14" Foreground="#666666" VerticalAlignment="Center"/>
                <TextBlock Text="â€¢" FontSize="14" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                <TextBlock Text="Items per page:" FontSize="14" Foreground="#666666" VerticalAlignment="Center"/>
                <ComboBox x:Name="PageSizeComboBox" Width="80" SelectionChanged="PageSize_SelectionChanged">
                    <ComboBoxItem Content="10" Tag="10"/>
                    <ComboBoxItem Content="20" Tag="20" IsSelected="True"/>
                    <ComboBoxItem Content="50" Tag="50"/>
                    <ComboBoxItem Content="All" Tag="-1"/>
                </ComboBox>
            </StackPanel>

            <Button x:Name="NextPageButton" Grid.Column="2" Click="NextPage_Click" Background="White" 
                    BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="16,10">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Next"/>
                    <FontIcon Glyph="&#xE76C;" FontSize="14"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>

