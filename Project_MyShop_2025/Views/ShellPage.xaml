<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Project_MyShop_2025.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_MyShop_2025.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
   
    <Grid>
        <NavigationView x:Name="NavView"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="False"
                        PaneDisplayMode="Left"
                        IsPaneOpen="True"
                        IsPaneToggleButtonVisible="True"
                        OpenPaneLength="240"
                        CompactPaneLength="48"
                        Background="#FFFFFF"
                        SelectionChanged="NavView_SelectionChanged">
            
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" Tag="Dashboard" Icon="Home"/>
                <NavigationViewItem Content="Products" Tag="Products" Icon="Shop"/>
                <NavigationViewItem Content="Orders" Tag="Orders" Icon="List"/>
                <NavigationViewItem Content="Customers" Tag="Customers">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE77B;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Promotions" Tag="Promotions">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8E5;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Reports" Tag="Reports" Icon="Document"/>
                <NavigationViewItem Content="AI Assistant" Tag="Chatbot">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8EA;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <!-- User Profile + Logout in PaneFooter -->
            <NavigationView.PaneFooter>
                <StackPanel Spacing="0" Padding="12,8,12,12">
                    <!-- User Profile Button with Flyout -->
                    <Button x:Name="UserProfileButton" 
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="8,10"
                            CornerRadius="8">
                        <Button.Flyout>
                            <MenuFlyout Placement="TopEdgeAlignedLeft">
                                <MenuFlyoutItem Text="My Profile" Icon="Contact"/>
                                <MenuFlyoutItem Text="Settings" Icon="Setting"/>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem x:Name="LogoutMenuItem" Text="Logout" Click="Logout_Click">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE7E8;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                        <Grid Width="200">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Avatar -->
                            <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#3B82F6" Offset="0"/>
                                        <GradientStop Color="#8B5CF6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock x:Name="UserInitialText" 
                                           Text="A" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- User Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock x:Name="UserNameText" 
                                           Text="Admin" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="#0F172A"/>
                                <TextBlock Text="Administrator" 
                                           FontSize="11" 
                                           Foreground="#64748B"/>
                            </StackPanel>
                            
                            <!-- Dropdown Icon -->
                            <FontIcon Grid.Column="2" Glyph="&#xE70D;" FontSize="12" Foreground="#94A3B8" 
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </NavigationView.PaneFooter>

            <!-- Content Area - No Header Bar -->
            <Frame x:Name="ContentFrame" Background="#F8FAFC"/>
        </NavigationView>
    </Grid>
</Page>
