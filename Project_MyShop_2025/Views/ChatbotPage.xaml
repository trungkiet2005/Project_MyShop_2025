                        <!-- Gemini Icon -->
                        <Border Width="64" Height="64" CornerRadius="32" HorizontalAlignment="Center">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#8B5CF6" Offset="0"/>
                                    <GradientStop Color="#EC4899" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
