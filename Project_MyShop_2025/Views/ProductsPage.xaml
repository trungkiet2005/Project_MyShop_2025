<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Project_MyShop_2025.Views.ProductsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_MyShop_2025.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8F9FA">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Product Management" FontSize="32" FontWeight="Bold" Foreground="#1A1A1A"/>
                <TextBlock Text="Manage your product catalog" FontSize="14" Foreground="#666666" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <Button x:Name="ImportButton" Click="ImportButton_Click" Background="#9C27B0" Foreground="White" CornerRadius="8" Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8B5;" FontSize="16"/>
                        <TextBlock Text="Import Data"/>
                    </StackPanel>
                </Button>
                <Button x:Name="AddCategoryButton" Click="AddCategoryButton_Click" Background="#FF9800" Foreground="White" CornerRadius="8" Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="16"/>
                        <TextBlock Text="Add Category"/>
                    </StackPanel>
                </Button>
                <Button x:Name="AddProductButton" Click="AddProductButton_Click" Background="#2196F3" Foreground="White" CornerRadius="8" Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="16"/>
                        <TextBlock Text="Add Product"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Category Filter -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Category:" FontSize="14" FontWeight="SemiBold" Foreground="#1A1A1A" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <ListView x:Name="CategoryFilterList" Grid.Column="1" SelectionMode="Single" SelectionChanged="CategoryFilter_SelectionChanged">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#E3F2FD" CornerRadius="20" Padding="16,8" BorderBrush="#2196F3" BorderThickness="1">
                                <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="Medium" Foreground="#2196F3"/>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <!-- Search and Filter Bar -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox x:Name="SearchBox" Grid.Column="0" PlaceholderText="Search products by name..." 
                         TextChanged="SearchBox_TextChanged" VerticalAlignment="Center">
                    <TextBox.Resources>
                        <SolidColorBrush x:Key="TextControlBackground" Color="#F5F5F5"/>
                    </TextBox.Resources>
                </TextBox>

                <!-- Min Price -->
                <StackPanel Grid.Column="2" Spacing="4">
                    <TextBlock Text="Min Price" FontSize="11" Foreground="#666666"/>
                    <TextBox x:Name="MinPriceBox" PlaceholderText="0" TextChanged="PriceFilter_Changed"/>
                </StackPanel>

                <!-- Max Price -->
                <StackPanel Grid.Column="4" Spacing="4">
                    <TextBlock Text="Max Price" FontSize="11" Foreground="#666666"/>
                    <TextBox x:Name="MaxPriceBox" PlaceholderText="∞" TextChanged="PriceFilter_Changed"/>
                </StackPanel>

                <!-- Sort -->
                <StackPanel Grid.Column="6" Spacing="4">
                    <TextBlock Text="Sort By" FontSize="11" Foreground="#666666"/>
                    <ComboBox x:Name="SortComboBox" Width="180" SelectionChanged="SortComboBox_SelectionChanged">
                        <ComboBoxItem Content="Name (A-Z)" Tag="NameAsc" IsSelected="True"/>
                        <ComboBoxItem Content="Name (Z-A)" Tag="NameDesc"/>
                        <ComboBoxItem Content="Price (Low to High)" Tag="PriceAsc"/>
                        <ComboBoxItem Content="Price (High to Low)" Tag="PriceDesc"/>
                        <ComboBoxItem Content="Stock (Low to High)" Tag="StockAsc"/>
                        <ComboBoxItem Content="Stock (High to Low)" Tag="StockDesc"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Products Grid -->
        <Border Grid.Row="3" Background="White" CornerRadius="12" Padding="24" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Results Count -->
                <TextBlock x:Name="ResultsCountText" Grid.Row="0" Text="Loading products..." FontSize="13" Foreground="#666666" Margin="0,0,0,16"/>

                <!-- Products ListView -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <GridView x:Name="ProductsGridView" SelectionMode="None">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="4"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="12" BorderBrush="#E0E0E0" BorderThickness="1" 
                                        Width="260" Margin="8" Padding="0" PointerEntered="ProductCard_PointerEntered" 
                                        PointerExited="ProductCard_PointerExited">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="200"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Product Image -->
                                        <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="#F5F5F5">
                                            <Image Source="{Binding Image}" Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- Product Info -->
                                        <StackPanel Grid.Row="1" Padding="16,12">
                                            <TextBlock Text="{Binding Name}" FontSize="15" FontWeight="SemiBold" 
                                                      Foreground="#1A1A1A" TextTrimming="CharacterEllipsis" MaxLines="2"/>
                                            <TextBlock Text="{Binding SKU}" FontSize="11" Foreground="#999999" Margin="0,4,0,0"/>
                                            <Grid Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding PriceFormatted}" FontSize="18" 
                                                          FontWeight="Bold" Foreground="#2196F3" VerticalAlignment="Center"/>
                                                <Border Grid.Column="1" Background="{Binding StockColor}" CornerRadius="4" Padding="8,4">
                                                    <TextBlock Text="{Binding StockText}" FontSize="10" Foreground="White" FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <Grid Grid.Row="2" Padding="12" Background="#F8F9FA" CornerRadius="0,0,12,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Button Grid.Column="0" Background="Transparent" BorderBrush="Transparent" 
                                                   Click="ViewProduct_Click" Tag="{Binding Id}" HorizontalAlignment="Stretch">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <FontIcon Glyph="&#xE8F4;" FontSize="14" Foreground="#2196F3"/>
                                                    <TextBlock Text="View" FontSize="12" Foreground="#2196F3"/>
                                                </StackPanel>
                                            </Button>
                                            
                                            <Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent" 
                                                   Click="EditProduct_Click" Tag="{Binding Id}" HorizontalAlignment="Stretch">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <FontIcon Glyph="&#xE70F;" FontSize="14" Foreground="#FF9800"/>
                                                    <TextBlock Text="Edit" FontSize="12" Foreground="#FF9800"/>
                                                </StackPanel>
                                            </Button>
                                            
                                            <Button Grid.Column="2" Background="Transparent" BorderBrush="Transparent" 
                                                   Click="DeleteProduct_Click" Tag="{Binding Id}" HorizontalAlignment="Stretch">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="#F44336"/>
                                                    <TextBlock Text="Delete" FontSize="12" Foreground="#F44336"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Pagination -->
        <Grid Grid.Row="4" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="PrevPageButton" Grid.Column="0" Click="PrevPage_Click" Background="White" 
                    BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="16,10">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE76B;" FontSize="14"/>
                    <TextBlock Text="Previous"/>
                </StackPanel>
            </Button>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8" VerticalAlignment="Center">
                <TextBlock x:Name="PageInfoText" Text="Page 1 of 1" FontSize="14" Foreground="#666666" VerticalAlignment="Center"/>
                <TextBlock Text="•" FontSize="14" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                <TextBlock Text="Items per page:" FontSize="14" Foreground="#666666" VerticalAlignment="Center"/>
                <ComboBox x:Name="PageSizeComboBox" Width="80" SelectionChanged="PageSize_SelectionChanged">
                    <ComboBoxItem Content="12" Tag="12"/>
                    <ComboBoxItem Content="24" Tag="24" IsSelected="True"/>
                    <ComboBoxItem Content="48" Tag="48"/>
                    <ComboBoxItem Content="All" Tag="-1"/>
                </ComboBox>
            </StackPanel>

            <Button x:Name="NextPageButton" Grid.Column="2" Click="NextPage_Click" Background="White" 
                    BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="16,10">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Next"/>
                    <FontIcon Glyph="&#xE76C;" FontSize="14"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
