<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Project_MyShop_2025.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_MyShop_2025.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="450" />
        </Grid.ColumnDefinitions>

        <!-- Left Side: Graphic / Branding -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F3E5F5" Offset="0.0" />
                    <GradientStop Color="#CE93D8" Offset="0.5" />
                    <GradientStop Color="#8E24AA" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>
            
            <!-- You can add abstract shapes or images here similar to the reference -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                <TextBlock Text="Welcome" FontSize="60" FontWeight="Bold" Foreground="White" />
                <TextBlock Text="Back!" FontSize="60" FontWeight="Bold" Foreground="White" />
            </StackPanel>
            
            <!-- Decorative Circle (Abstract shape mimic) -->
            <Ellipse Width="300" Height="300" Fill="#AB47BC" Opacity="0.3" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="-50,0,0,-50"/>
            <Ellipse Width="150" Height="150" Fill="#E1BEE7" Opacity="0.4" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,50,50,0"/>

        </Grid>

        <!-- Right Side: Login Form -->
        <Grid Grid.Column="1" Background="White" Padding="50">
            <StackPanel VerticalAlignment="Center" Spacing="25">
                
                <StackPanel Spacing="5">
                    <TextBlock Text="Login" FontSize="32" FontWeight="Bold" Foreground="#333" />
                    <TextBlock Text="Welcome back! Please login to your account." FontSize="14" Foreground="Gray" />
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock Text="User Name" Foreground="Gray" FontWeight="Medium"/>
                    <TextBox x:Name="UsernameBox" PlaceholderText="username@gmail.com" Padding="10" CornerRadius="8" BorderThickness="1"/>
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock Text="Password" Foreground="Gray" FontWeight="Medium"/>
                    <PasswordBox x:Name="PasswordBox" PlaceholderText="********" Padding="10" CornerRadius="8" BorderThickness="1"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox x:Name="RememberMeCheckBox" Content="Remember Me" Grid.Column="0" Foreground="#555"/>
                    <!-- Optional: Forgot Password link -->
                    <HyperlinkButton Content="Forgot Password?" Grid.Column="1" Foreground="Gray" FontSize="12"/>
                </Grid>

                <Button Content="Login" Click="Login_Click" Background="#7B1FA2" Foreground="White" CornerRadius="8" Height="45" HorizontalAlignment="Stretch" FontSize="16" FontWeight="SemiBold">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#6A1B9A" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#4A148C" />
                        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White" />
                        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White" />
                    </Button.Resources>
                </Button>

                <!-- Navigation to Config -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5" Margin="0,10,0,0">
                    <TextBlock Text="Need to configure server?" Foreground="Gray"/>
                    <HyperlinkButton Content="Settings" Click="NavigateToConfig_Click" Foreground="#7B1FA2" FontWeight="SemiBold"/>
                </StackPanel>

            </StackPanel>

            <!-- Version Info at Bottom Right -->
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <TextBlock x:Name="VersionTextBlock" Text="Version 1.0.0" Foreground="#CCC" FontSize="12" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
