<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Project_MyShop_2025.Views.CustomersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_MyShop_2025.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8FAFC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Page Header -->
        <Border Grid.Row="0" Background="White" Padding="24,20" 
                BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Title & Count -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                    <TextBlock Text="Customer Management" FontSize="24" FontWeight="Bold" Foreground="#0F172A"/>
                    <Border Background="#F0FDF4" CornerRadius="16" Padding="12,6" VerticalAlignment="Center">
                        <TextBlock x:Name="ResultsCountText" Text="0 customers" FontSize="13" 
                                   Foreground="#16A34A" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <!-- Right: Add Customer Button -->
                <Button x:Name="AddCustomerButton" Grid.Column="2" Click="AddCustomerButton_Click" 
                        Background="#16A34A" Foreground="White" CornerRadius="8" Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE77B;" FontSize="16"/>
                        <TextBlock Text="Add Customer" FontSize="13" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Row 1: Filters Toolbar -->
        <Border Grid.Row="1" Background="#FFFFFF" Padding="24,16" 
                BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border Grid.Column="0" Background="#F8FAFC" CornerRadius="8" 
                        BorderBrush="#E2E8F0" BorderThickness="1" Padding="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="44"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0" Glyph="&#xE721;" FontSize="16" 
                                  Foreground="#94A3B8" HorizontalAlignment="Center"/>
                        <TextBox x:Name="SearchBox" Grid.Column="1" 
                                 PlaceholderText="Search by name, phone, email..." 
                                 TextChanged="SearchBox_TextChanged" 
                                 BorderThickness="0" Background="Transparent"
                                 VerticalAlignment="Center" Padding="0,10"/>
                    </Grid>
                </Border>

                <!-- Active Filter -->
                <ComboBox x:Name="ActiveFilterCombo" Grid.Column="2" Width="150"
                          SelectionChanged="ActiveFilter_Changed">
                    <ComboBoxItem Content="All Customers" Tag="All" IsSelected="True"/>
                    <ComboBoxItem Content="Active Only" Tag="Active"/>
                    <ComboBoxItem Content="Inactive Only" Tag="Inactive"/>
                </ComboBox>

                <!-- Sort Dropdown -->
                <ComboBox x:Name="SortComboBox" Grid.Column="4" Width="180" 
                          SelectionChanged="SortComboBox_SelectionChanged">
                    <ComboBoxItem Content="Name (A-Z)" Tag="NameAsc" IsSelected="True"/>
                    <ComboBoxItem Content="Name (Z-A)" Tag="NameDesc"/>
                    <ComboBoxItem Content="Newest First" Tag="CreatedAtDesc"/>
                    <ComboBoxItem Content="Oldest First" Tag="CreatedAtAsc"/>
                    <ComboBoxItem Content="Most Points" Tag="PointsDesc"/>
                    <ComboBoxItem Content="Least Points" Tag="PointsAsc"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- Row 2: Customers List -->
        <ScrollViewer Grid.Row="2" Padding="24,16" VerticalScrollBarVisibility="Auto" 
                      Background="#F8FAFC">
            <ListView x:Name="CustomersListView" SelectionMode="None">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,0,12"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="12" BorderBrush="#E2E8F0" 
                                BorderThickness="1" Padding="0" 
                                PointerEntered="CustomerCard_PointerEntered"
                                PointerExited="CustomerCard_PointerExited">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Border Grid.Column="0" Background="#F1F5F9" Width="60" Height="60" 
                                        CornerRadius="30" Margin="16">
                                    <TextBlock Text="{Binding Initials}" FontSize="20" FontWeight="Bold" 
                                               Foreground="#64748B" HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Customer Info -->
                                <StackPanel Grid.Column="1" Padding="8,16" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding Name}" FontSize="15" FontWeight="SemiBold" 
                                                   Foreground="#0F172A"/>
                                        <Border Background="{Binding StatusBackground}" CornerRadius="4" 
                                                Padding="6,2" Visibility="{Binding InactiveVisibility}">
                                            <TextBlock Text="Inactive" FontSize="10" 
                                                       Foreground="{Binding StatusForeground}"/>
                                        </Border>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,6,0,0">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="&#xE717;" FontSize="12" Foreground="#94A3B8"/>
                                            <TextBlock Text="{Binding Phone}" FontSize="12" Foreground="#64748B"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Spacing="4" Visibility="{Binding EmailVisibility}">
                                            <FontIcon Glyph="&#xE715;" FontSize="12" Foreground="#94A3B8"/>
                                            <TextBlock Text="{Binding Email}" FontSize="12" Foreground="#64748B"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Address}" FontSize="12" Foreground="#94A3B8" 
                                               Margin="0,4,0,0" TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                                </StackPanel>

                                <!-- Loyalty Points -->
                                <Border Grid.Column="2" Background="#FEF3C7" CornerRadius="8" 
                                        Padding="12,8" Margin="0,0,16,0" VerticalAlignment="Center">
                                    <StackPanel>
                                        <TextBlock Text="{Binding LoyaltyPointsFormatted}" FontSize="16" 
                                                   FontWeight="Bold" Foreground="#D97706" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="points" FontSize="10" Foreground="#B45309" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Stats -->
                                <StackPanel Grid.Column="3" Margin="0,0,20,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TotalSpentFormatted}" FontSize="14" 
                                               FontWeight="SemiBold" Foreground="#0F172A" 
                                               HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding OrderCountText}" FontSize="11" 
                                               Foreground="#94A3B8" HorizontalAlignment="Right"/>
                                </StackPanel>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="4" 
                                            VerticalAlignment="Center" Margin="0,0,12,0">
                                    <Button Background="Transparent" BorderThickness="0" 
                                            Padding="10" CornerRadius="6"
                                            Click="ViewCustomer_Click" Tag="{Binding Id}"
                                            ToolTipService.ToolTip="View orders">
                                        <FontIcon Glyph="&#xE8F4;" FontSize="16" Foreground="#3B82F6"/>
                                    </Button>
                                    <Button Background="Transparent" BorderThickness="0" 
                                            Padding="10" CornerRadius="6"
                                            Click="EditCustomer_Click" Tag="{Binding Id}"
                                            ToolTipService.ToolTip="Edit customer">
                                        <FontIcon Glyph="&#xE70F;" FontSize="16" Foreground="#F59E0B"/>
                                    </Button>
                                    <Button Background="Transparent" BorderThickness="0" 
                                            Padding="10" CornerRadius="6"
                                            Click="DeleteCustomer_Click" Tag="{Binding Id}"
                                            ToolTipService.ToolTip="Deactivate customer">
                                        <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="#EF4444"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <!-- Row 3: Pagination -->
        <Border Grid.Row="3" Background="White" Padding="24,14" 
                BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="PrevPageButton" Grid.Column="0" Click="PrevPage_Click" 
                        Background="White" BorderBrush="#E2E8F0" BorderThickness="1" 
                        CornerRadius="8" Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE76B;" FontSize="12" Foreground="#64748B"/>
                        <TextBlock Text="Previous" FontSize="13" Foreground="#475569"/>
                    </StackPanel>
                </Button>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" 
                            Spacing="16" VerticalAlignment="Center">
                    <TextBlock x:Name="PageInfoText" Text="Page 1 of 1" FontSize="13" 
                               Foreground="#64748B" VerticalAlignment="Center" FontWeight="Medium"/>
                    <Border Background="#E2E8F0" Width="1" Height="20"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Show:" FontSize="13" Foreground="#64748B" VerticalAlignment="Center"/>
                        <ComboBox x:Name="PageSizeComboBox" Width="120" 
                                  SelectionChanged="PageSize_SelectionChanged">
                            <ComboBoxItem Content="10 customers" Tag="10"/>
                            <ComboBoxItem Content="20 customers" Tag="20" IsSelected="True"/>
                            <ComboBoxItem Content="50 customers" Tag="50"/>
                            <ComboBoxItem Content="All" Tag="-1"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <Button x:Name="NextPageButton" Grid.Column="2" Click="NextPage_Click" 
                        Background="White" BorderBrush="#E2E8F0" BorderThickness="1" 
                        CornerRadius="8" Padding="16,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Next" FontSize="13" Foreground="#475569"/>
                        <FontIcon Glyph="&#xE76C;" FontSize="12" Foreground="#64748B"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
